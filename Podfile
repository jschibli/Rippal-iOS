source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '11.3'
inhibit_all_warnings!

target 'Rippal' do
	# Comment the next line if you're not using Swift and don't want to use dynamic frameworks
	use_frameworks!

	# Pods for Rippal
	pod 'Alamofire'
	pod 'AlamofireImage'
	pod 'FacebookCore'
	pod 'FacebookLogin'
	pod 'FacebookShare'

	target 'RippalTests' do
		inherit! :search_paths
		# Pods for testing
	end

	target 'RippalUITests' do
		inherit! :search_paths
		# Pods for testing
	end

end